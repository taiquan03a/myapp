{
  "expo": {
    "name": "myapp",
    "slug": "myapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "myapp",
    "deepLinking": true,
    "deepLinks": [
      "myapp://"
    ],
    "platforms": [
      "ios",
      "android"
    ],
    "ios": {
      "bundleIdentifier": "com.yourapp.zalopay",
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "zalopay",
          "zalo",
          "zalopay.api.v2",
          "zalopay",
          "zalo",
          "zalopay.api.v2"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.myapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "expo": {
      "plugins": [
        "./plugins/withZaloPay"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "3724c465-3fd3-44a5-b79a-2158008fdf84"
      }
    }
  }
}